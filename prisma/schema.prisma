generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model GlobalSettings {
  id                   Int      @id @default(autoincrement())
  electricityUahPerKwh Float    @default(4.32)
  laborUahPerHour      Float    @default(200)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Printer {
  id                 Int       @id @default(autoincrement())
  name               String
  powerWatts         Float
  amortUahPerHour    Float?
  serviceUahPerHour  Float?
  projects           Project[]
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Material {
  id                  Int       @id @default(autoincrement())
  name                String
  priceUahPerKg       Float
  defaultWastePercent Float
  projects            Project[]
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model Service {
  id         Int       @id @default(autoincrement())
  name       String
  fixedUah   Float
  usesTime   Boolean   @default(false)
  projects   ProjectService[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Project {
  id                   Int              @id @default(autoincrement())
  title                String
  date                 DateTime
  qty                  Int              @default(1)
  note                 String?
  stlPath              String?
  stlXmm               Float?
  stlYmm               Float?
  stlZmm               Float?
  printerId            Int?
  printer              Printer?         @relation(fields: [printerId], references: [id])
  materialId           Int?
  material             Material?        @relation(fields: [materialId], references: [id])
  printTimeHours       Float            @default(0)
  materialGrams        Float            @default(0)
  wastePercent         Float            @default(0)
  saleMode             String           @default("markup")
  markupPercent        Float            @default(30)
  manualSalePriceUah   Float            @default(0)
  includePrinterAmort  Boolean          @default(false)
  includePrinterService Boolean         @default(false)
  services             ProjectService[]
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
}

model ProjectService {
  id          Int      @id @default(autoincrement())
  projectId   Int
  serviceId   Int
  timeMinutes Int?
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  service     Service  @relation(fields: [serviceId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([projectId, serviceId])
}
